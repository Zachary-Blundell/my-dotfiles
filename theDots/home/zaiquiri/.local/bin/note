#!/bin/bash
#  _   _       _            
# | \ | | ___ | |_ ___  ___ 
# |  \| |/ _ \| __/ _ \/ __|
# | |\  | (_) | ||  __/\__ \
# |_| \_|\___/ \__\___||___/
# Author : Zachary Blundell
# This script is used for opening and autosaveing notes to github

function save
{
    cd ~/Documents/Notebook/
    echo "Adding all"
    git add .
    echo "Commiting Auto Save"
    git commit -m "Auto Save"
    echo "Pushing"
    git push
    cd "$OLDPWD"
}

function note
{
    cd ~/Documents/Notebook/
    git pull || (echo "Problme pulling from Github" && sleep 5)
    lvim . && save;
}

while [ "$1" != "" ]; do
    case $1 in
        -s | s | save )
            save
            exit 
            ;;
        * )
            note
            exit 
    esac
    shift
done

note
